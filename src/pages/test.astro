---
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout
  metadata={{
    title: "Test Page",
    description: "This is a test page to demonstrate Tailwind CSS.",
  }}
>
  <Header />
  <main class="flex-1">
    <section class="section-padding">
      <div class="container">
        <div class="max-w-4xl mx-auto text-center">
          <h1 class="text-4xl md:text-5xl font-bold text-blue-600 mb-6">
            Tailwind CSS Test Page
          </h1>
          <p class="text-xl text-gray-600 mb-8">
            If this text is styled, Tailwind is working correctly.
          </p>
          <div class="flex justify-center space-x-4 mb-8">
            <div class="h-16 w-16 bg-red-500 rounded-lg shadow-lg"></div>
            <div class="h-16 w-16 bg-green-500 rounded-lg shadow-lg"></div>
            <div class="h-16 w-16 bg-blue-500 rounded-lg shadow-lg"></div>
          </div>
          <div class="bg-gray-50 rounded-xl p-8">
            <h2 class="text-2xl font-semibold text-gray-900 mb-4">Design System Test</h2>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
              <div class="bg-white p-6 rounded-lg shadow-sm">
                <h3 class="font-semibold text-gray-900 mb-2">Typography</h3>
                <p class="text-gray-600 text-sm">Modern font stack with proper spacing</p>
              </div>
              <div class="bg-white p-6 rounded-lg shadow-sm">
                <h3 class="font-semibold text-gray-900 mb-2">Colors</h3>
                <p class="text-gray-600 text-sm">Consistent color palette</p>
              </div>
              <div class="bg-white p-6 rounded-lg shadow-sm">
                <h3 class="font-semibold text-gray-900 mb-2">Layout</h3>
                <p class="text-gray-600 text-sm">Responsive grid system</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>
