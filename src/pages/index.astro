---
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import Layout from '../layouts/Layout.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';
---

<Layout metadata={{ title: SITE_TITLE, description: SITE_DESCRIPTION }}>
	<Header />

	<main class="flex-1">
		<!-- Hero Section -->
		<section class="section-padding bg-gradient-to-br from-orange-50 to-orange-100">
			<div class="container">
				<div class="max-w-4xl mx-auto text-center">
					<img
						src="https://images.unsplash.com/photo-1460925895917-afdab827c52f?w=800&h=400&fit=crop&crop=entropy&auto=format&q=80"
						alt="Modern workspace"
						class="w-full max-w-2xl mx-auto rounded-lg shadow-lg mb-8"
					/>
					<h1 class="text-4xl md:text-6xl font-bold text-gray-900 mb-6">
						Welcome to <span class="text-orange-600">{SITE_TITLE}</span>
					</h1>
					<p class="text-xl text-gray-600 mb-8 max-w-2xl mx-auto">
						{SITE_DESCRIPTION}. Built with modern technologies for speed, accessibility, and beautiful design.
					</p>
					<div class="flex flex-col sm:flex-row gap-4 justify-center">
						<a
							href="/blog"
							class="px-6 py-3 bg-orange-600 text-white font-medium rounded-lg hover:bg-orange-700 transition-colors"
						>
							Read Our Blog
						</a>
						<a
							href="/about"
							class="px-6 py-3 border border-orange-300 text-orange-700 font-medium rounded-lg hover:bg-orange-50 transition-colors"
						>
							Learn More
						</a>
					</div>
				</div>
			</div>
		</section>

		<!-- Features Section -->
		<section class="section-padding">
			<div class="container">
				<div class="max-w-3xl mx-auto text-center mb-16">
					<h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-6">
						Modern Web Development
					</h2>
					<p class="text-lg text-gray-600">
						Built with the latest technologies and best practices for optimal performance and user experience.
					</p>
				</div>

				<div class="grid grid-cols-1 md:grid-cols-3 gap-8">
					<div class="text-center">
						<img
							src="https://images.unsplash.com/photo-1551288049-bebda4e38f71?w=300&h=200&fit=crop&crop=entropy&auto=format&q=80"
							alt="Performance dashboard"
							class="w-full max-w-xs mx-auto rounded-lg shadow-md mb-4"
						/>
						<h3 class="text-xl font-semibold text-gray-900 mb-3">Lightning Fast</h3>
						<p class="text-gray-600">
							Powered by Astro for optimal performance with minimal JavaScript bundle sizes.
						</p>
					</div>

					<div class="text-center">
						<img
							src="https://images.unsplash.com/photo-1573164713714-d95e436ab8d6?w=300&h=200&fit=crop&crop=entropy&auto=format&q=80"
							alt="Accessibility features"
							class="w-full max-w-xs mx-auto rounded-lg shadow-md mb-4"
						/>
						<h3 class="text-xl font-semibold text-gray-900 mb-3">Accessible</h3>
						<p class="text-gray-600">
							Built with accessibility in mind, ensuring everyone can use and enjoy your content.
						</p>
					</div>

					<div class="text-center">
						<img
							src="https://images.unsplash.com/photo-1559028006-448665bd7c7f?w=300&h=200&fit=crop&crop=entropy&auto=format&q=80"
							alt="Responsive design mockup"
							class="w-full max-w-xs mx-auto rounded-lg shadow-md mb-4"
						/>
						<h3 class="text-xl font-semibold text-gray-900 mb-3">Responsive Design</h3>
						<p class="text-gray-600">
							Tailwind CSS ensures beautiful design across all devices and screen sizes.
						</p>
					</div>
				</div>
			</div>
		</section>

		<!-- CTA Section -->
		<section class="section-padding bg-orange-900 text-white">
			<div class="container">
				<div class="max-w-3xl mx-auto text-center">
					<img
						src="https://images.unsplash.com/photo-1522202176988-66273c2fd55f?w=600&h=300&fit=crop&crop=entropy&auto=format&q=80"
						alt="Team collaboration"
						class="w-full max-w-lg mx-auto rounded-lg shadow-lg mb-8"
					/>
					<h2 class="text-3xl md:text-4xl font-bold mb-6">
						Ready to Get Started?
					</h2>
					<p class="text-xl text-orange-100 mb-8">
						Explore our blog posts and learn more about modern web development.
					</p>
					<a
						href="/blog"
						class="px-8 py-4 bg-white text-orange-900 font-medium rounded-lg hover:bg-orange-50 transition-colors inline-block"
					>
						View All Posts
					</a>
				</div>
			</div>
		</section>
	</main>

	<Footer />
</Layout>
