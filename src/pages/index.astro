---
import Layout from "../layouts/PageLayout.astro";
import { Particles } from "@/components/ui/particles";
import { RainbowButton } from "@/components/ui/rainbow-button"
import { AvatarCirclesDemo } from "@/components/avatars";
---
<Layout
	metadata={{
		title: "Marketing on Reddit & LinkedIn",
		description:
			"Build your brand on Reddit & LinkedIn without getting suspended",
	}}
>
	<section class="hero py-32 relative overflow-hidden">
		<Particles 
			client:load 
			className="absolute inset-0 -z-10"
			quantity={75}
			color="#000000"
			ease={80}
			size={1}
		/>
		<div class="hero-content text-center relative z-10">
			<div class="max-w-2xl">
				<div class="flex justify-center mb-6">
					<AvatarCirclesDemo client:load />
				</div>
				<p class="text-sm text-base-content opacity-60 mb-4">Trusted by 99+ founders</p>
				<h1 class="text-6xl text-base-content">Stop Wasting Money on Dead Leads</h1>
				<p class="py-8 text-lg text-base-content opacity-70">You're burning cash on ads that don't convert while your competitors steal your customers. Get quality leads that actually buy.</p>
				<RainbowButton client:load className="text-white px-8 py-3 text-lg">Fix My Lead Problem</RainbowButton>
			</div>
		</div>
	</section>
	
	<section class="px-4 md:px-32 py-16">
		<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
			<div class="card bg-base-100 shadow-xl">
				<div class="card-body">
					<h2 class="card-title">Reddit Marketing</h2>
					<p>Build authentic connections and drive traffic without getting banned</p>
				</div>
			</div>
			<div class="card bg-base-100 shadow-xl">
				<div class="card-body">
					<h2 class="card-title">LinkedIn Growth</h2>
					<p>Expand your professional network and generate quality leads</p>
				</div>
			</div>
			<div class="card bg-base-100 shadow-xl">
				<div class="card-body">
					<h2 class="card-title">Brand Safety</h2>
					<p>Protect your reputation while scaling your marketing efforts</p>
				</div>
			</div>
		</div>
	</section>
</Layout>
