---
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import Header from '../../components/Header.astro';
import Layout from '../../layouts/Layout.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../../consts';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);

const metadata = {
  title: `Blog - ${SITE_TITLE}`,
  description: 'Explore our latest articles, tutorials, and insights on modern web development.',
};
---

<Layout metadata={metadata}>
	<Header />

	<main class="flex-1">
		<!-- Hero Section -->
		<section class="section-padding bg-gradient-to-br from-gray-50 to-white">
			<div class="container">
				<div class="max-w-3xl mx-auto text-center">
					<h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
						Our Blog
					</h1>
					<p class="text-xl text-gray-600">
						Discover the latest insights, tutorials, and best practices in modern web development.
					</p>
				</div>
			</div>
		</section>

		<!-- Blog Posts -->
		<section class="section-padding">
			<div class="container">
				<div class="max-w-6xl mx-auto">
					{posts.length > 0 ? (
						<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
							{posts.map((post) => (
								<article class="group bg-white rounded-xl shadow-sm hover:shadow-md transition-shadow duration-300 overflow-hidden">
									<div class="p-6 pb-0">
										<div class="mb-3">
											<time class="text-sm text-gray-500">
												<FormattedDate date={post.data.pubDate} />
											</time>
										</div>
										<h2 class="text-xl font-bold text-gray-900 mb-3 group-hover:text-orange-600 transition-colors line-clamp-2">
											<a href={`/blog/${post.id}/`} class="no-underline">
												{post.data.title}
											</a>
										</h2>
										{post.data.description && (
											<p class="text-gray-600 mb-4 line-clamp-3 text-sm">
												{post.data.description}
											</p>
										)}
										<div class="flex flex-wrap gap-2 mb-6">
											{post.data.categories && post.data.categories.slice(0, 2).map(category => (
												<a
													href={`/blog/category/${category}`}
													class="px-2 py-1 text-xs bg-orange-100 text-orange-700 rounded-full hover:bg-orange-200 transition-colors no-underline"
												>
													{category}
												</a>
											))}
										</div>
									</div>
									{post.data.heroImage && (
										<a href={`/blog/${post.id}/`} class="block mb-4">
											<div class="aspect-video overflow-hidden mx-6 rounded-lg">
												<Image
													width={400}
													height={225}
													src={post.data.heroImage}
													alt={post.data.title}
													class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
												/>
											</div>
										</a>
									)}
									<div class="px-6 pb-6">
										<a
											href={`/blog/${post.id}/`}
											class="inline-flex items-center text-orange-600 hover:text-orange-700 font-medium text-sm no-underline"
										>
											Read more
											<svg class="ml-1 w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
												<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
											</svg>
										</a>
									</div>
								</article>
							))}
						</div>
					) : (
						<div class="text-center py-16">
							<div class="w-24 h-24 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-6">
								<svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
								</svg>
							</div>
							<h2 class="text-2xl font-bold text-gray-900 mb-4">No posts yet</h2>
							<p class="text-gray-600">Check back soon for exciting content!</p>
						</div>
					)}
				</div>
			</div>
		</section>
	</main>

	<Footer />
</Layout>
