---
import { SITE_TITLE } from '../consts';
---

<header class="sticky top-0 z-50 bg-white/80 backdrop-blur-md border-b border-gray-100 supports-[backdrop-filter]:bg-white/60">
  <div class="container">
    <div class="flex h-16 items-center justify-between">
      <a href="/" class="flex items-center space-x-2 text-xl font-bold text-gray-900 hover:text-blue-600 transition-colors">
        <span>{SITE_TITLE}</span>
      </a>

      <nav class="hidden md:flex items-center space-x-8">
        <a href="/" class="text-gray-600 hover:text-gray-900 transition-colors font-medium">Home</a>
        <a href="/blog" class="text-gray-600 hover:text-gray-900 transition-colors font-medium">Blog</a>
        <a href="/about" class="text-gray-600 hover:text-gray-900 transition-colors font-medium">About</a>
      </nav>

      <button id="mobile-menu-button" class="md:hidden p-2 text-gray-600 hover:text-gray-900 hover:bg-gray-100 rounded-lg transition-colors">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>
  </div>

  <div id="mobile-menu" class="hidden md:hidden border-t border-gray-100 bg-white">
    <nav class="container py-4 space-y-2">
      <a href="/" class="block py-2 text-gray-600 hover:text-gray-900 transition-colors font-medium">Home</a>
      <a href="/blog" class="block py-2 text-gray-600 hover:text-gray-900 transition-colors font-medium">Blog</a>
      <a href="/about" class="block py-2 text-gray-600 hover:text-gray-900 transition-colors font-medium">About</a>
    </nav>
  </div>
</header>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const button = document.getElementById('mobile-menu-button');
    const menu = document.getElementById('mobile-menu');

    if (button && menu) {
      button.addEventListener('click', () => {
        menu.classList.toggle('hidden');
      });
    }
  });
</script>
